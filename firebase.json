{
  "hosting": {
    "public": "public",
    "rewrites": [
      {
        "source": "**/**",
        "function": "nextjs-server"
      }
    ]
  },
  "functions": {
    "source": ".",
    "ignore": [
      "firebase.json",
      "firbease-debug.log",
      "**/.*",
      "**/node_modules/**",
      "components/**",
      "container/**",
      "hoc/**",
      "pages/**",
      "public/**",
      "shared/**",
      "store/**",
      "styles/**",
      "readme.md"
    ]
  }
}
